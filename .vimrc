colorscheme ron
set tabstop=4
set softtabstop=4
set shiftwidth=4
set autoindent
set smartindent
set number
set numberwidth=1
set hlsearch
syntax on
set ruler
set backspace=2
set cursorline
hi CursorLine cterm=none ctermbg=236
set mouse=a
map <ScrollWheelUp> <C-Y><C-Y><C-Y>
map <ScrollWheelDown> <C-E><C-E><C-E>
nnoremap <F4> :set hlsearch!<CR>
set laststatus=2
set showcmd
set ttimeoutlen=50
hi LineNr ctermbg=236
set relativenumber
:vnoremap < <gv
:vnoremap > >gv

